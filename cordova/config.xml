<?xml version='1.0' encoding='utf-8'?>
<widget id="fergardi.cordova.annyversary" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Annyversary</name>
  <description>
    Annyversary
  </description>
  <author email="fergardi@gmail.com">
    Fergardi
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
    <!-- screen landscape -->
    <splash src="res/screen/drawable-land-ldpi/screen.png" density="land-ldpi"/>
    <splash src="res/screen/drawable-land-mdpi/screen.png" density="land-mdpi"/>
    <splash src="res/screen/drawable-land-hdpi/screen.png" density="land-hdpi"/>
    <splash src="res/screen/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
    <!-- screen portrait -->
    <splash src="res/screen/drawable-port-ldpi/screen.png" density="port-ldpi"/>
    <splash src="res/screen/drawable-port-mdpi/screen.png" density="port-mdpi"/>
    <splash src="res/screen/drawable-port-hdpi/screen.png" density="port-hdpi"/>
    <splash src="res/screen/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
    <!-- icon -->
    <icon src="res/icon/mipmap-ldpi/icon.png" density="ldpi" />
    <icon src="res/icon/mipmap-mdpi/icon.png" density="mdpi" />
    <icon src="res/icon/mipmap-hdpi/icon.png" density="hdpi" />
    <icon src="res/icon/mipmap-xhdpi/icon.png" density="xhdpi" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <platform name="browser">
  </platform>
  <engine name="android" spec="~7.0.0" />
  <!-- common preferences -->
  <preference name="Orientation" value="portrait" />
  <preference name="SplashScreenDelay" value="3000" />
  <preference name="SplashScreen" value="screen" />
  <preference name="ShowSplashScreenSpinner" value="false"/>
</widget>
